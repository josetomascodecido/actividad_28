<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th colspan="3">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td> <h4> <%= link_to company.name, company %></h4></td>
        <td><%= link_to 'Edit', edit_company_path(company), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class:'btn btn-info' %>
